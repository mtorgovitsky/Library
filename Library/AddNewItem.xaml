<Window x:Class="Library.GUI.AddNewItem"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library.GUI"
        mc:Ignorable="d"
        Title="AddNewItem" Height="300" Width="300" ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="37*"/>
            <ColumnDefinition Width="12*"/>
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="txtType" HorizontalAlignment="Left" Height="21" Margin="20,54,0,0" TextWrapping="Wrap" Text="Type of Item" VerticalAlignment="Top" Width="83"/>
        <ComboBox x:Name="cmbBaseCat" HorizontalAlignment="Left" Height="21" Margin="127,93,0,0" VerticalAlignment="Top" Width="149" Grid.ColumnSpan="2" SelectionChanged="FillInnerCombo"/>
        <TextBlock x:Name="txtBaseCategory" HorizontalAlignment="Left" Height="21" Margin="20,93,0,0" TextWrapping="Wrap" Text="Base Category" VerticalAlignment="Top" Width="83"/>
        <ComboBox x:Name="cmbInnerCat" HorizontalAlignment="Left" Height="21" Margin="127,133,0,0" VerticalAlignment="Top" Width="149" Grid.ColumnSpan="2"/>
        <TextBlock x:Name="txtBaseCategory_Copy" HorizontalAlignment="Left" Height="21" Margin="20,133,0,0" TextWrapping="Wrap" Text="Inner Category" VerticalAlignment="Top" Width="83"/>
        <RadioButton x:Name="rdBook" Content="Book" HorizontalAlignment="Left" Height="21" Margin="144,55,0,0" VerticalAlignment="Top" Width="47" Checked="rdChecked"/>
        <RadioButton x:Name="rdJournal" Content="Journal" HorizontalAlignment="Left" Height="21" Margin="214,55,0,0" VerticalAlignment="Top" Width="62" Grid.ColumnSpan="2" Checked="rdChecked"/>
        <TextBlock x:Name="txtBaseCategory_Copy1" HorizontalAlignment="Left" Height="21" Margin="20,172,0,0" TextWrapping="Wrap" Text="Inner Category" VerticalAlignment="Top" Width="83"/>

    </Grid>
</Window>
